{
  "manifest_version": 3,
  "name": "Vista-fork",
  "description": "A minimal and aesthetic new tab extension with mountain landscape backgrounds.",
  "version": "1.0.0",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "host_permissions": ["https://ipwho.is/", "https://api.open-meteo.com/v1/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "vista-fork@alinaqihassan"
    }
  }
}
